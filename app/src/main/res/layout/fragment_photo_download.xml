<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.picturedownload.PictureDownloadFragment">

    <ImageView
        android:id="@+id/image_view_download"
        android:layout_width="0dp"
        android:layout_height="350dp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
         />



    <ProgressBar
        android:id="@+id/progressbar_download_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_download"
        app:layout_constraintEnd_toEndOf="@+id/image_view_download"
        app:layout_constraintStart_toStartOf="@+id/image_view_download"
        app:layout_constraintTop_toTopOf="@+id/image_view_download" />



    <com.github.abdularis.buttonprogress.DownloadButtonProgress
        android:id="@+id/button_download"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="32dp"
        app:elevation="10dp"
        app:idleBackgroundColor="@color/colorAccent"
        android:src="@drawable/ic_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


    </com.github.abdularis.buttonprogress.DownloadButtonProgress>
</androidx.constraintlayout.widget.ConstraintLayout>